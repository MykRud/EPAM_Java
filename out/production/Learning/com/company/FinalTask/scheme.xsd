<?xml version="1.0"?>
<schema>
    <element name="countryService">
        <complexType>
            <sequence>
		<element name="country">
			<complexType>
           			 <sequence>	
                			<element name="codeOfCountry" type="int" />
               				<element name="nameOfCountry" maxOccurs="unbounded" minOccurs="0" />
					<element name="listOfCities">
						<complexType>
           			 			<sequence>
								<element name="city">
                    							<complexType>
                        							<sequence>
                            								<element name="codeOfCity" type="int" />
											<element name="nameOfCity" maxOccurs="unbounded" minOccurs="0" />
											<element name="population" type="int" />
											<element name="isCapital" type="bool" />
                        								</sequence>
										</complexType>
                    							</element>
                						</sequence>
            						</complexType>
        					</element>
    					</sequence>
					</complexType>
     				</element>
			</sequence>
		</complexType>
	</element>
</schema>